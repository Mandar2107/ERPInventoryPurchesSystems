@model IEnumerable<ERPInventoryPurchesSystems.Models.PR.PurchesRequstiaon>

@{
    ViewData["Title"] = "Purchase Requisition List";
}

<h2>Purchase Requisition List</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>PR Number</th>
            <th>PR Date</th>
            <th>Department</th>
            <th>Submitted By</th>
            <th>Status</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pr in Model)
        {
            <tr>
                <td>@pr.PRNumber</td>
                <td>@pr.PRDate.ToString("yyyy-MM-dd")</td>
                <td>@pr.Department?.DepartmentName</td>
                <td>@pr.SubmittedBy?.FullName</td>
                <td>@pr.Status</td>
                <td>@pr.CreatedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@pr.PurchaseRequisitionID" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@pr.PurchaseRequisitionID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@pr.PurchaseRequisitionID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
