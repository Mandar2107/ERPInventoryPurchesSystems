@model ERPInventoryPurchesSystems.Models.PR.GoodsReceiptNote

@{
    ViewData["Title"] = "GRN Details";
}

<h2 class="mb-4">GRN Details</h2>

<div class="card mb-4">
    <div class="card-body">
        <p><strong>GRN Number:</strong> @Model.GRNNumber</p>
        <p><strong>Date:</strong> @Model.GRNDate.ToShortDateString()</p>
        <p><strong>Vendor:</strong> @Model.Vendor?.VendorName</p>
        <p><strong>PO Number:</strong> @Model.PurchaseOrder?.PONumber</p>
        <p><strong>Received By:</strong> @Model.ReceivedBy?.FullName</p>
        <p><strong>Department:</strong> @Model.Department?.DepartmentName</p>
        <p><strong>Transporter:</strong> @Model.TransporterName</p>
        <p><strong>Vehicle Number:</strong> @Model.VehicleNumber</p>
        <p><strong>Verified By:</strong> @Model.VerifiedBy?.FullName</p>
        <p><strong>Verification Date:</strong> @Model.VerificationDate.ToShortDateString()</p>
    </div>
</div>

<h4>Items</h4>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Item</th>
            <th>Ordered Qty</th>
            <th>Received Qty</th>
            <th>Unit</th>
            <th>Condition</th>
            <th>Remarks</th>
            <th>Current Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Item?.ItemName</td>
                <td>@item.OrderedQuantity</td>
                <td>@item.ReceivedQuantity</td>
                <td>@item.Unit</td>
                <td>@item.Condition</td>
                <td>@item.Remarks</td>
                <td>@item.Item?.QuantityInHand</td>
            </tr>
        }
    </tbody>
</table>
