@model IEnumerable<ERPInventoryPurchesSystems.Models.Master.User>
@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>

<p>
    <a asp-action="CreateUser" class="btn btn-primary">Create New User</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>User Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserID</td>
                <td>@item.FullName</td>
                <td>@item.EmailAddress</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Department?.DepartmentName</td>
                <td>@item.UserRole</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@item.UserID">Edit</a> |
                    <a asp-action="DetailsUser" asp-route-id="@item.UserID">Details</a> |
                    <a asp-action="DeleteUser" asp-route-id="@item.UserID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>