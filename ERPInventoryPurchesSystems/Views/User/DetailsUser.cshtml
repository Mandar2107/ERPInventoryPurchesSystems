@model ERPInventoryPurchesSystems.Models.Master.User

@{
    ViewData["Title"] = "User Details";
}

<h2 class="mb-4">User Details</h2>

<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr><th>User ID</th><td>@Model.UserID</td></tr>
                <tr><th>Full Name</th><td>@Model.FullName</td></tr>
                <tr><th>Email</th><td>@Model.EmailAddress</td></tr>
                <tr><th>Phone</th><td>@Model.PhoneNumber</td></tr>
                <tr><th>Designation</th><td>@Model.Designation</td></tr>
                <tr><th>Department</th><td>@Model.Department?.DepartmentName</td></tr>
                <tr><th>Vendor</th><td>@Model.VendorProfile?.VendorName</td></tr>
                <tr><th>User Role</th><td>@Model.UserRole</td></tr>
                <tr><th>Status</th><td>@Model.Status</td></tr>
                <tr><th>Last Login</th><td>@Model.LastLoginDate.ToString("yyyy-MM-dd")</td></tr>
                <tr><th>Password Expiry</th><td>@Model.PasswordExpiryDate.ToString("yyyy-MM-dd")</td></tr>
            </tbody>
        </table>
    </div>
</div>
