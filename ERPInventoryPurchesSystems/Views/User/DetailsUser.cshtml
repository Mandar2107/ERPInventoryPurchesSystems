@model ERPInventoryPurchesSystems.Models.Master.User
@{
    ViewData["Title"] = "User Details";
}
<h2>User Details</h2>
<dl class="row">
    <dt class="col-sm-4">User ID</dt>
    <dd class="col-sm-8">@Model.UserID</dd>
    <dt class="col-sm-4">Full Name</dt>
    <dd class="col-sm-8">@Model.FullName</dd>
    <dt class="col-sm-4">Email</dt>
    <dd class="col-sm-8">@Model.EmailAddress</dd>
    <dt class="col-sm-4">Phone</dt>
    <dd class="col-sm-8">@Model.PhoneNumber</dd>
    <dt class="col-sm-4">Designation</dt>
    <dd class="col-sm-8">@Model.Designation</dd>
    <dt class="col-sm-4">Department</dt>
    <dd class="col-sm-8">@Model.Department?.DepartmentName</dd>
    <dt class="col-sm-4">Vendor</dt>
    <dd class="col-sm-8">@Model.VendorProfile?.VendorName</dd>
    <dt class="col-sm-4">User Role</dt>
    <dd class="col-sm-8">@Model.UserRole</dd>
    <dt class="col-sm-4">Status</dt>
    <dd class="col-sm-8">@Model.Status</dd>
    <dt class="col-sm-4">Last Login</dt>
    <dd class="col-sm-8">@Model.LastLoginDate.ToString("yyyy-MM-dd")</dd>
    <dt class="col-sm-4">Password Expiry</dt>
    <dd class="col-sm-8">@Model.PasswordExpiryDate.ToString("yyyy-MM-dd")</dd>
</dl>
