@model ERPInventoryPurchesSystems.Models.Master.User
@{
    ViewData["Title"] = "Delete User";
}
<h2>Delete User</h2>
<h4>Are you sure you want to delete this user?</h4>
<dl class="row">
    <dt class="col-sm-4">User ID</dt>
    <dd class="col-sm-8">@Model.UserID</dd>
    <dt class="col-sm-4">Full Name</dt>
    <dd class="col-sm-8">@Model.FullName</dd>
    <dt class="col-sm-4">Email</dt>
    <dd class="col-sm-8">@Model.EmailAddress</dd>
</dl>
<form asp-action="DeleteUserConfirmed" method="post">
    <input type="hidden" asp-for="UserID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="UserList" class="btn btn-secondary">Cancel</a>
</form>
