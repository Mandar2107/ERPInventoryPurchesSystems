@model ERPInventoryPurchesSystems.Models.Master.Category
@{
    ViewData["Title"] = "Create Category";
}
<h2>Create Category</h2>
<form asp-action="AfterCreateCategory" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CategoryCode" class="control-label"></label>
                <input asp-for="CategoryCode" class="form-control" />
                <span asp-validation-for="CategoryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryType">Category Type</label>
                <select asp-for="CategoryType" class="form-control">
                    <option value="">--Select Type--</option>
                    <option>Item</option>
                    <option>Vendor</option>
                    <option>Service</option>
                    <option>Expense</option>
                </select>
                <span asp-validation-for="CategoryType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status">Status</label>
                <select asp-for="Status" class="form-control">
                    <option>Active</option>
                    <option>Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessUnit">Business Unit</label>
                <select asp-for="BusinessUnit" class="form-control">
                    <option value="">--Select Unit--</option>
                    <option>Manufacturing</option>
                    <option>Retail</option>
                    <option>Services</option>
                </select>
                <span asp-validation-for="BusinessUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentCode">Department</label>
                <select asp-for="DepartmentCode" class="form-control" asp-items="ViewBag.Departments">
                    <option value="">--Select Department--</option>
                </select>
                <span asp-validation-for="DepartmentCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultUOM">Default UOM</label>
                <select asp-for="DefaultUOM" class="form-control">
                    <option value="">--Select UOM--</option>
                    <option>Kg</option>
                    <option>Liters</option>
                    <option>Pieces</option>
                    <option>Boxes</option>
                </select>
                <span asp-validation-for="DefaultUOM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StorageRequirements">Storage Requirements</label>
                <select asp-for="StorageRequirements" class="form-control">
                    <option value="">--Select Requirement--</option>
                    <option>Temperature-controlled</option>
                    <option>Hazardous</option>
                    <option>Standard</option>
                </select>
                <span asp-validation-for="StorageRequirements" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="EnableAnalytics">Enable Analytics</label>
                <select asp-for="EnableAnalytics" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="EnableAnalytics" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReorderPolicy">Reorder Policy</label>
                <select asp-for="ReorderPolicy" class="form-control">
                    <option value="">--Select Policy--</option>
                    <option>Centralized</option>
                    <option>Decentralized</option>
                </select>
                <span asp-validation-for="ReorderPolicy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApprovalWorkflow">Approval Workflow</label>
                <select asp-for="ApprovalWorkflow" class="form-control">
                    <option value="true">Required</option>
                    <option value="false">Not Required</option>
                </select>
                <span asp-validation-for="ApprovalWorkflow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChangeHistory">Change History</label>
                <textarea asp-for="ChangeHistory" class="form-control"></textarea>
                <span asp-validation-for="ChangeHistory" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success mt-3">Save Category</button>
</form>