@model ERPInventoryPurchesSystems.Models.Master.Category

<h2>Delete Category</h2>

<p>Are you sure you want to delete this category?</p>

<dl class="row">
    <dt class="col-sm-4">Category Code</dt>
    <dd class="col-sm-8">@Model.CategoryCode</dd>

    <dt class="col-sm-4">Category Name</dt>
    <dd class="col-sm-8">@Model.CategoryName</dd>
</dl>

<form asp-action="DeleteCategoryConfirmed" method="post">
    <input type="hidden" asp-for="CategoryCode" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="CategoryList" class="btn btn-secondary">Cancel</a>
</form>
