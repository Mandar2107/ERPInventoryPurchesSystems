@model IEnumerable<ERPInventoryPurchesSystems.Models.Master.Category>
@{
    ViewData["Title"] = "Category List";
}
<h2>Category List</h2>
<p>
    <a asp-action="CreateCategory" class="btn btn-primary">Create New Category</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category Code</th>
            <th>Category Name</th>
            <th>Category Type</th>
            <th>Status</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryCode</td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryType</td>
                <td>@item.Status</td>
                <td>@item.Department?.DepartmentName</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@item.CategoryCode">Edit</a> |
                    <a asp-action="DetailsCategory" asp-route-id="@item.CategoryCode">Details</a> |
                    <a asp-action="DeleteCategory" asp-route-id="@item.CategoryCode">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
