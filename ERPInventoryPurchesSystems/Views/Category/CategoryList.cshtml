@model IEnumerable<ERPInventoryPurchesSystems.Models.Master.Category>
@{
    ViewData["Title"] = "Category List";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h2>Category List</h2>
<p>
    <a asp-action="CreateCategory" class="btn btn-primary">Create New Category</a>
</p>
<table  class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Code</th>
            <th>Category Name</th>
            <th>Category Type</th>
            <th>Status</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryCode</td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryType</td>
                <td>@item.Status</td>
                <td>@item.Department?.DepartmentName</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@item.CategoryCode" class="btn btn-sm btn-warning">Edit</a> 
                    <a asp-action="DetailsCategory" asp-route-id="@item.CategoryCode" class="btn btn-sm btn-info">Details</a>
                    <form asp-action="DeleteCategory" asp-route-id="@item.CategoryCode" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
