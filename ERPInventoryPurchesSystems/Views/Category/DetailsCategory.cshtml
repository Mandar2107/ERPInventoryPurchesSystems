@model ERPInventoryPurchesSystems.Models.Master.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2 class="mb-4">Category Details</h2>

<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr><th>Category Code</th><td>@Model.CategoryCode</td></tr>
                <tr><th>Category Name</th><td>@Model.CategoryName</td></tr>
                <tr><th>Category Type</th><td>@Model.CategoryType</td></tr>
                <tr><th>Status</th><td>@Model.Status</td></tr>
                <tr><th>Business Unit</th><td>@Model.BusinessUnit</td></tr>
                <tr><th>Department</th><td>@Model.Department?.DepartmentName</td></tr>
                <tr><th>Usage Type</th><td>@Model.UsageType</td></tr>
                <tr><th>Tax Group</th><td>@Model.TaxGroup</td></tr>
                <tr><th>Default UOM</th><td>@Model.DefaultUOM</td></tr>
                <tr><th>Storage Requirements</th><td>@Model.StorageRequirements</td></tr>
                <tr><th>Inspection Required</th><td>@Model.InspectionRequired</td></tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <table class="table table-bordered table-striped">
            <tbody>
                .EnableAnalytics</td></tr>
                <tr><th>Reorder Policy</th><td>@Model.ReorderPolicy</td></tr>
                <tr><th>Approval Workflow</th><td>@Model.ApprovalWorkflow</td></tr>
                <tr><th>Created By</th><td>@Model.CreatedBy</td></tr>
                <tr><th>Created Date</th><td>@Model.CreatedDate.ToString("yyyy-MM-dd")</td></tr>
                <tr><th>Last Modified By</th><td>@Model.LastModifiedBy</td></tr>
                <tr><th>Last Modified Date</th><td>@Model.LastModifiedDate.ToString("yyyy-MM-dd")</td></tr>
                <tr><th>Change History</th><td>@Model.ChangeHistory</td></tr>
            </tbody>
        </table>
    </div>
</div>

<hr />

<h3 class="mt-4 mb-3">Items in this Category</h3>

@if (Model.Items != null && Model.Items.Any())
{
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Item Code</th>
                <th>Item Name</th>
                <th>UOM</th>
                <th>Selling Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ItemCode</td>
                    <td>@item.ItemName</td>
                    <td>@item.UOM</td>
                    <td>@item.SellingPrice</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No items found for this category.</div>
}
