@model IEnumerable<ERPInventoryPurchesSystems.Models.Master.Item>

@{
    ViewData["Title"] = "Item Master List";
}

<h2 class="mb-4">Item Master List</h2>

<p>
    <a asp-action="CreateItem" class="btn btn-success">+ Add New Item</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Category</th>
            <th>Type</th>
            <th>UOM</th>
            <th>Standard Cost</th>
            <th>Selling Price</th>
            <th>Created By</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.ItemCategory</td>
                <td>@item.ItemType</td>
                <td>@item.PurchaseUOM</td> <!-- Assuming UOM is PurchaseUOM -->
                <td>@item.StandardCost.ToString("C")</td>
                <td>@item.SellingPrice.ToString("C")</td>
                <td>@item.CreatedBy</td>
                <td>@item.CreatedDate.ToString("g")</td>
                <td>
                    <a asp-action="EditItem" asp-route-id="@item.ItemCode" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DetailsItem" asp-route-id="@item.ItemCode" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="DeleteItem" asp-route-id="@item.ItemCode" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
