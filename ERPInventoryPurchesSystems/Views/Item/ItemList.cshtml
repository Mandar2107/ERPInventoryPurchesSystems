@model IEnumerable<ERPInventoryPurchesSystems.Models.Master.Item>

@{
    ViewData["Title"] = "Item List";
}

<h2>Item List</h2>

<p>
    <a asp-action="CreateItem" class="btn btn-primary">Create New Item</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Item Code</th>
            <th>Item Name</th>
            <th>Category</th>
            <th>UOM</th>
            <th>Selling Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemCode</td>
                <td>@item.ItemName</td>
                <td>@item.Category?.CategoryName</td>
                <td>@item.UOM</td>
                <td>@item.SellingPrice</td>
                <td>
                    <a asp-action="EditItem" asp-route-id="@item.ItemCode" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DetailsItem" asp-route-id="@item.ItemCode" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="DeleteItem" asp-route-id="@item.ItemCode" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
