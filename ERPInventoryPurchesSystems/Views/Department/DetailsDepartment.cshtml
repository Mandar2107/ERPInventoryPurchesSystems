@model ERPInventoryPurchesSystems.Models.Master.Department

@{
    ViewData["Title"] = "Department Details";
}

<h2 class="mb-4">Department Details</h2>

<div class="card mb-4">
    <div class="card-body">
        <p><strong>Department Code:</strong> @Model.DepartmentCode</p>
        <p><strong>Department Name:</strong> @Model.DepartmentName</p>
        <p><strong>Department Type:</strong> @Model.DepartmentType</p>
        <p><strong>Location:</strong> @Model.Location</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Department Head:</strong> @Model.DepartmentHead</p>
        <p><strong>Email Address:</strong> @Model.EmailAddress</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Extension Number:</strong> @Model.ExtensionNumber</p>
        <p><strong>Primary Function:</strong> @Model.PrimaryFunction</p>
        <p><strong>Linked Modules:</strong> @Model.LinkedModules</p>
        <p><strong>Approval Authority Level:</strong> @Model.ApprovalAuthorityLevel</p>
        <p><strong>Created By:</strong> @Model.CreatedBy</p>
        <p><strong>Created Date:</strong> @Model.CreatedDate.ToString("dd-MM-yyyy HH:mm")</p>
        <p><strong>Last Modified By:</strong> @Model.LastModifiedBy</p>
        <p><strong>Last Modified Date:</strong> @Model.LastModifiedDate.ToString("dd-MM-yyyy HH:mm")</p>
    </div>
</div>



<div class="mt-4">
    <a asp-action="DeleteDepartment" asp-route-id="@Model.DepartmentCode" class="btn btn-danger">Delete</a>
    <a asp-action="DepartmentList" class="btn btn-secondary">Back to List</a>
</div>
