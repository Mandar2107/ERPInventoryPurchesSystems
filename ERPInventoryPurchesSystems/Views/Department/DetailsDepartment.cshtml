@model ERPInventoryPurchesSystems.Models.Master.Department

@{
    ViewData["Title"] = "Department Details";
}

<h2 class="mb-4">Department Details</h2>

<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr><th>Code</th><td>@Model.DepartmentCode</td></tr>
                <tr><th>Name</th><td>@Model.DepartmentName</td></tr>
                <tr><th>Type</th><td>@Model.DepartmentType</td></tr>
                <tr><th>Location</th><td>@Model.Location</td></tr>
                <tr><th>Status</th><td>@Model.Status</td></tr>
                <tr><th>Head</th><td>@Model.DepartmentHead</td></tr>
                <tr><th>Email</th><td>@Model.EmailAddress</td></tr>
                <tr><th>Phone</th><td>@Model.PhoneNumber</td></tr>
                <tr><th>Extension</th><td>@Model.ExtensionNumber</td></tr>
                <tr><th>Primary Function</th><td>@Model.PrimaryFunction</td></tr>
                <tr><th>Linked Modules</th><td>@Model.LinkedModules</td></tr>
                <tr><th>Approval Level</th><td>@Model.ApprovalAuthorityLevel</td></tr>
            </tbody>
        </table>
    </div>
</div>
