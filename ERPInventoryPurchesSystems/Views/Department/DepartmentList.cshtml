@model IEnumerable<ERPInventoryPurchesSystems.Models.Master.Department>
@{
    ViewData["Title"] = "Department List";
}
<h2>Department List</h2>
<p>
    <a asp-action="CreateDepartment" class="btn btn-primary">Create New Department</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Type</th>
            <th>Status</th>
            <th>Head</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmentCode</td>
                <td>@item.DepartmentName</td>
                <td>@item.DepartmentType</td>
                <td>@item.Status</td>
                <td>@item.DepartmentHead</td>
                <td>
                    <a asp-action="EditDepartment" asp-route-id="@item.DepartmentCode">Edit</a> |
                    <a asp-action="DetailsDepartment" asp-route-id="@item.DepartmentCode">Details</a> |
                    <a asp-action="DeleteDepartment" asp-route-id="@item.DepartmentCode">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>