@model IEnumerable<ERPInventoryPurchesSystems.Models.Master.Department>
@{
    ViewData["Title"] = "Department List";
}


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}


<h2>Department List</h2>

<button onclick="window.history.back();" class="btn btn-secondary">Back</button>


<p>
    <a asp-action="CreateDepartment" class="btn btn-primary">Create New Department</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Type</th>
            <th>Status</th>
            <th>Head</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmentCode</td>
                <td>@item.DepartmentName</td>
                <td>@item.DepartmentType</td>
                <td>@item.Status</td>
                <td>@item.DepartmentHead</td>
                <td>
                    <a asp-action="EditDepartment" asp-route-id="@item.DepartmentCode" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DetailsDepartment" asp-route-id="@item.DepartmentCode" class="btn btn-sm btn-info">Details</a>

                    <form asp-action="DeleteDepartmentConfirmed" asp-route-id="@item.DepartmentCode" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this department?');">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
