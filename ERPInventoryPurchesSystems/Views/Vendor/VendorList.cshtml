@model IEnumerable<ERPInventoryPurchesSystems.Models.Master.Vendor>

<h2>Vendor List</h2>

<a asp-action="CreateVendor" class="btn btn-primary mb-3">Add New Vendor</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Vendor Code</th>
            <th>Vendor Name</th>
            <th>Vendor Type</th>
            <th>Status</th>
            <th>Contact Person</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendor in Model)
        {
            <tr>
                <td>@vendor.VendorCode</td>
                <td>@vendor.VendorName</td>
                <td>@vendor.VendorType</td>
                <td>@vendor.Status</td>
                <td>@vendor.ContactPersonName</td>
                <td>@vendor.PhoneNumber</td>
                <td>@vendor.EmailAddress</td>
                <td>@vendor.Category?.CategoryName</td>
                <td>
                    <a asp-action="EditVendor" asp-route-id="@vendor.VendorCode" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DetailsVendor" asp-route-id="@vendor.VendorCode" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="DeleteVendor" asp-route-id="@vendor.VendorCode" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
