        <input asp-for="LastPurchaseDate" type="date" class="form-control" />

        <label asp-for="TotalSpend"></label>
        <input asp-for="TotalSpend" class="form-control" />

        <label asp-for="AverageLeadTime"></label>
        <input asp-for="AverageLeadTime" class="form-control" />

        <label asp-for="DeliveryReliabilityScore"></label>
        <input asp-for="DeliveryReliabilityScore" class="form-control" />

