@model ERPInventoryPurchesSystems.Models.Master.Vendor

<h2>Delete Vendor</h2>
<p>Are you sure you want to delete this vendor?</p>

<table class="table table-bordered">
    <tr><th>Vendor Code</th><td>@Model.VendorCode</td></tr>
    <tr><th>Vendor Name</th><td>@Model.VendorName</td></tr>
    <tr><th>Vendor Type</th><td>@Model.VendorType</td></tr>
    <tr><th>Status</th><td>@Model.Status</td></tr>
</table>

<form asp-action="DeleteVendorConfirmed" method="post">
    <input type="hidden" asp-for="VendorCode" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="VendorList" class="btn btn-secondary">Cancel</a>
</form>
