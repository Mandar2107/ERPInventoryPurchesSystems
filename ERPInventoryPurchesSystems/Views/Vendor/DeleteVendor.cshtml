@model ERPInventoryPurchesSystems.Models.Master.Vendor

<h2>Delete Vendor</h2>

<p>Are you sure you want to delete this vendor?</p>

<dl class="row">
    <dt class="col-sm-4">Vendor Code</dt>
    <dd class="col-sm-8">@Model.VendorCode</dd>

    <dt class="col-sm-4">Vendor Name</dt>
    <dd class="col-sm-8">@Model.VendorName</dd>
</dl>

<form asp-action="DeleteVendorConfirmed" method="post">
    <input type="hidden" asp-for="VendorCode" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="VendorList" class="btn btn-secondary">Cancel</a>
</form>
