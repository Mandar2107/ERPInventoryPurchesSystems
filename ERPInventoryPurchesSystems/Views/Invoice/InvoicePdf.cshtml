@model ERPInventoryPurchesSystems.Models.PR.Invoice

<div class="container mt-4">
    <h2 class="mb-3">Invoice - @Model.InvoiceNumber</h2>

    <div class="mb-3">
        <p><strong>Date:</strong> @Model.InvoiceDate.ToShortDateString()</p>
        <p><strong>Vendor:</strong> @Model.Vendor?.VendorName ?? "N/A"</p>
        <p><strong>PO Number:</strong> @Model.PurchaseOrder?.PONumber ?? "N/A"</p>
        <p><strong>GRN Number:</strong> @Model.GRN?.GRNNumber ?? "N/A"</p>
        <p><strong>Department:</strong> @Model.Department?.DepartmentName ?? "N/A"</p>
    </div>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Item</th>
                <th>PO Qty</th>
                <th>GRN Qty</th>
                <th>Invoice Qty</th>
                <th>Unit Price</th>
                <th>Total</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Item?.ItemName ?? "N/A"</td>
                    <td>@item.POQuantity</td>
                    <td>@item.GRNQuantity</td>
                    <td>@item.InvoicedQuantity</td>
                    <td>₹@item.UnitPrice.ToString("N2")</td>
                    <td>₹@item.TotalAmount.ToString("N2")</td>
                    <td>@item.MatchStatus </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <p><strong>Total Invoice Amount:</strong> ₹@Model.TotalInvoiceAmount.ToString("N2")</p>
        <p><strong>Payment Terms:</strong> @Model.PaymentTerms ?? "N/A"</p>
        <p><strong>Payment Method:</strong> @Model.PaymentMethod ?? "N/A"</p>
        <p><strong>Payment Status:</strong> @Model.PaymentStatus ?? "N/A"</p>
        <p><strong>Payment Date:</strong> @Model.PaymentDate.ToShortDateString()</p>
        <p><strong>Processed By:</strong> @Model.ProcessedBy?.FullName ?? "N/A"</p>
    </div>
</div>
