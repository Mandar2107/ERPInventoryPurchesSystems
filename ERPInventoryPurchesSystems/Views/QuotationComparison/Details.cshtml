@model ERPInventoryPurchesSystems.Models.PR.QuotationComparison
@{
    ViewData["Title"] = "Quotation Details";
}

<h2 class="mb-4">Quotation Comparison Details</h2>

<div class="card mb-4">
    <div class="card-body">
        <p><strong>PR Number:</strong> @Model.PurchaseRequisition?.PRNumber</p>
        <p><strong>Department:</strong> @Model.Department?.DepartmentName</p>
        <p><strong>Requested By:</strong> @Model.RequestedBy?.FullName</p>
        <p><strong>Date of Comparison:</strong> @Model.DateOfComparison.ToShortDateString()</p>
    </div>
</div>

<h4>Selected Vendor Quotations</h4>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Item</th>
            <th>Vendor</th>
            <th>Quoted Qty</th>
            <th>Unit Price</th>
            <th>Total Price</th>
            <th>Delivery Time</th>
            <th>Rating</th>
            <th>Remarks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items.Where(i => i.IsSelected))
        {
            <tr>
                <td>@item.Item.ItemName</td>
                <td>@item.Vendor.VendorName</td>
                <td>@item.QuotedQuantity</td>
                <td>@item.UnitPrice</td>
                <td>@item.TotalPrice</td>
                <td>@item.DeliveryTime</td>
                <td>@item.VendorRating</td>
                <td>@item.Remarks</td>
            </tr>
        }
    </tbody>
</table>
