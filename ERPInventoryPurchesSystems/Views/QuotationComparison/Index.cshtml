@model IEnumerable<ERPInventoryPurchesSystems.Models.PR.QuotationComparison>

@{
    ViewData["Title"] = "Quotation Comparisons";
}

<h2 class="mb-4">Quotation Comparisons</h2>

<a asp-action="Create" class="btn btn-success mb-3">Create Quotation</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>PR Number</th>
            <th>Department</th>
            <th>Requested By</th>
            <th>Date of Comparison</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comparison in Model)
        {
            <tr>
                <td>@comparison.PurchaseRequisition?.PRNumber</td>
                <td>@comparison.Department?.DepartmentName</td>
                <td>@comparison.RequestedBy?.FullName</td>
                <td>@comparison.DateOfComparison.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@comparison.ComparisonId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@comparison.ComparisonId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@comparison.ComparisonId" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="Index1" asp-route-id="@comparison.ComparisonId" class="btn btn-secondary btn-sm">Compare</a>
                </td>
            </tr>
        }
    </tbody>
</table>
