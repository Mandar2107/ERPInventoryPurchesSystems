@using ERPInventoryPurchesSystems.Models.Master
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "User ERP Dashboard";
    var isUser = User.IsInRole("User");
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-md-block bg-light sidebar shadow-sm min-vh-100">
            <div class="position-sticky pt-3">
                <h5 class="text-primary text-center mb-4">Purchase Dept</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/PurchaseRequisition/PRList">
                            <i class="bi bi-journal-text me-2"></i>Purchase Requisition
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/RequestForQuotation/Index">
                            <i class="bi bi-envelope-open me-2"></i>Request for Quotation
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/QuotationComparison/Index">
                            <i class="bi bi-bar-chart-line me-2"></i>Quotation Comparison
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/PurchaseOrder/Index">
                            <i class="bi bi-cart-check me-2"></i>Purchase Order
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/GoodsReceiptNote/Index">
                            <i class="bi bi-box-arrow-in-down me-2"></i>Goods Receipt Note
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/QualityInspection/Index">
                            <i class="bi bi-search me-2"></i>Quality Inspection
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Invoice/Index">
                            <i class="bi bi-receipt me-2"></i>Invoice Matching
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h2 class="text-success">Welcome to ERP Inventory Dashboard</h2>
            </div>

            <div class="alert alert-info">
                This dashboard provides access to modules based on your role.
            </div>

            @if (isUser)
            {
                <div class="row g-4">
                    <div class="col-md-3">
                        <a href="/PurchaseRequisition/PRList" class="text-decoration-none">
                            <div class="card text-white bg-primary h-100 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="bi bi-journal-text fs-2 mb-2"></i>
                                    <h5 class="card-title">My Requisitions</h5>
                                    <p class="card-text fs-4">12</p>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-md-3">
                        <a href="/PurchaseOrder/Index" class="text-decoration-none">
                            <div class="card text-white bg-success h-100 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="bi bi-cart-check fs-2 mb-2"></i>
                                    <h5 class="card-title">My Purchase Orders</h5>
                                    <p class="card-text fs-4">8</p>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-md-3">
                        <a href="/Invoice/Index" class="text-decoration-none">
                            <div class="card text-white bg-warning h-100 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="bi bi-receipt fs-2 mb-2"></i>
                                    <h5 class="card-title">Pending Invoices</h5>
                                    <p class="card-text fs-4">5</p>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-md-3">
                        <a href="/Feedback/Index" class="text-decoration-none">
                            <div class="card text-white bg-info h-100 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="bi bi-chat-left-text fs-2 mb-2"></i>
                                    <h5 class="card-title">Feedback</h5>
                                    <p class="card-text fs-4">3</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </main>
    </div>
</div>
