@{
    ViewData["Title"] = "About Purchase Department";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet{
      background-color: #f8f9fa;
      padding: 60px 0;
      }
      .about-section h2 {
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 20px;
      }
      .about-section p {
      font-size: 1.1rem;
      line-height: 1.8;
      }
      .about-icon {
      font-size: 3rem;
      color: #0d6efd;
      }
      .card {
      border: none;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      }
</style>

<div class="container about-section">
    <div class="text-center mb-5">
        <i class="fas fa-building about-icon"></i>
        <h2>About the Purchase Department</h2>
        <p class="text-muted">Empowering procurement with efficiency, transparency, and control.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card p-4 mb-4">
                <h4 class="text-primary">Our Mission</h4>
                <p>
                    The Purchase Department is committed to ensuring timely and cost-effective procurement of goods and services.
                    We aim to support organizational goals by maintaining transparency, compliance, and vendor relationships.
                </p>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-4 mb-4">
                <h4 class="text-success">Our Responsibilities</h4>
                <ul>
                    <li>Managing purchase requisitions and approvals</li>
                    <li>Vendor evaluation and quotation comparison</li>
                    <li>Issuing purchase orders</li>
                    <li>Coordinating goods receipt and quality inspection</li>
                    <li>Invoice matching and payment processing</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card p-4">
                <h4 class="text-info">Why Choose Us?</h4>
                <p>
                    Our department leverages the ERP system to streamline procurement workflows, reduce manual errors, and enhance decision-making.
                    With a focus on accountability and performance, we ensure every purchase aligns with strategic business needs.
                </p>
            </div>
        </div>
    </div>
</div>
