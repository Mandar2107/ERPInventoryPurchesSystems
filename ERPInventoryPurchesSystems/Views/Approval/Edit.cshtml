@model ERPInventoryPurchesSystems.Models.PR.Approval

@{
    ViewData["Title"] = "Edit Approval";
}

<h2>Edit Approval</h2>

<form asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ApprovalID" />
    <div class="form-group">
        <label asp-for="ApprovalStatus"></label>
        <select asp-for="ApprovalStatus" class="form-control">
            <option>Pending</option>
            <option>Approved</option>
            <option>Rejected</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Comments"></label>
        <textarea asp-for="Comments" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ApprovalDate"></label>
        <input asp-for="ApprovalDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Update</button>
</form>
