@model IEnumerable<ERPInventoryPurchesSystems.Models.PR.RequestForQuotation>

@{
    ViewData["Title"] = "RFQ List";
}

<h2 class="mb-4">RFQ List</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Create Request
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>PR Number</th>
            <th>Status</th> <!-- Optional: replace Vendor column -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rfq in Model)
        {
            <tr>
                <td>@rfq.PurchaseRequisition?.PRNumber</td>
                <td>Pending Vendor Quotes</td> <!-- or remove this column -->
                <td>
                    <a asp-action="Details" asp-route-id="@rfq.RFQId" class="btn btn-info btn-sm me-1">Details</a>
                    <a asp-action="Edit" asp-route-id="@rfq.RFQId" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Are you sure you want to delete this requisition?');">
                        <input type="hidden" name="id" value="@rfq.RFQId" />
                        <button type="submit" class="btn btn-danger btn-sm me-1">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
