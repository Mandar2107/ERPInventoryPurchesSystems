@model ERPInventoryPurchesSystems.Models.PR.RequestForQuotation

@{
    ViewData["Title"] = "RFQ Details";
}

<h2>RFQ Details</h2>

<div class="form-group">
    <label>PR Number:</label>
    <p>@Model.PurchaseRequisition.PRNumber</p>
</div>
<div class="form-group">
    <label>Vendor:</label>
    <p>@Model.Vendor.VendorName</p>
</div>

<h4>RFQ Items</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Delivery Date</th>
            <th>Quotation Amount</th>
            <th>Terms</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.DeliveryDate.ToShortDateString()</td>
                <td>@item.QuotationAmount</td>
                <td>@item.TermsAndConditions</td>
            </tr>
        }
    </tbody>
</table>
